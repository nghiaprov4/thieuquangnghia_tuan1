<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="118dp"
        android:layout_height="52dp"
        android:layout_marginBottom="4dp"
        android:text="LOGIN"
        app:backgroundTint="#CAAA4C"
        app:layout_constraintBottom_toBottomOf="@+id/button2"
        tools:layout_editor_absoluteX="44dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="130dp"
        android:layout_height="59dp"
        android:text="SIGN UP"
        app:backgroundTint="#CAAA4C"
        tools:layout_editor_absoluteX="259dp"
        tools:layout_editor_absoluteY="483dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_circle"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="75dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="159dp"
        android:layout_height="58dp"
        android:text="GROW\n YOUR BUSINESS"
        android:textAlignment="center"
        android:textColor="#0E0C0C"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="258dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="324dp"
        android:layout_height="66dp"
        android:text="We will hlep you to grow your business using\n online server"
        android:textAlignment="center"
        android:textColor="#121111"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="367dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOW WE WORK?"
        android:textColor="#151414"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="593dp" />

</androidx.constraintlayout.widget.ConstraintLayout>